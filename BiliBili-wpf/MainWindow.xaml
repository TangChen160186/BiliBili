<Window x:Class="BiliBili_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:BiliBili_wpf.ViewModels"
        xmlns:controls="clr-namespace:BiliBili_wpf.Controls"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="658" MinWidth="1080" Height="658" Width="1080"
        Background="{DynamicResource WindowBackgroundBrush}"
        d:DataContext="{d:DesignInstance Type=viewModels:MainViewModel, IsDesignTimeCreatable=True}"
        ResizeMode="CanResize">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="80" 
                      NonClientFrameEdges="None" 
                      ResizeBorderThickness="5" 
                      GlassFrameThickness="1"
                      UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Window.Resources>
        <DataTemplate x:Key="MainNavigationDataTemplate" DataType="{x:Type viewModels:MainNavigationItem}">
            <StackPanel>
                <Path Data="{Binding Path}" 
                      Width="26" 
                      Height="26" 
                      Fill="{Binding RelativeSource={RelativeSource AncestorType=ListBoxItem}, Path=Foreground}"
                      Stretch="Fill"/>
                <TextBlock Text="{Binding Name}" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Margin="0,4,0,0"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="SubNavigationDataTemplate">
            <StackPanel>
                <TextBlock Text="{Binding .}" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           Margin="0,4,0,0"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Window.Template>
        <ControlTemplate TargetType="Window">
            <Grid Background="{TemplateBinding Background}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="64"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Background="{DynamicResource MainNavigationBarBackGround}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <ListBox ItemsSource="{Binding MainNavigationItems}"
                             Grid.Row="1" 
                             Background="Transparent"
                             BorderThickness="0" 
                             ItemContainerStyle="{DynamicResource MainNavigationItemContainerStyle}"
                             ItemTemplate="{StaticResource MainNavigationDataTemplate}"
                             SelectedItem="{Binding CurrentMainNavigationItem}"/>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid  >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <Image Margin="40,0,0,0" Width="74" Source="{DynamicResource BiliBiliIconDrawingImage}"/>
                            <controls:IndicatorListBox ItemsSource="{Binding CurrentMainNavigationItem.SubNavigationItems}"
                                                       Background="Transparent"
                                                       BorderThickness="0" 
                                                       ItemContainerStyle="{DynamicResource SubNavigationItemContainerStyle}"
                                                       ItemTemplate="{StaticResource SubNavigationDataTemplate}"
                                                       SelectedItem="{Binding CurrentMainNavigationItem.CurrentSubNavigationItem}"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Orientation="Horizontal" >
                            <Button Style="{DynamicResource Btn-Minimum}" Margin="0,0,8,0"/>
                            <ToggleButton Style="{DynamicResource Btn-NormalMax}"
                                          Margin="0,0,8,0" />
                            <Button Style="{DynamicResource Btn-Close}" Margin="0,0,36,0"/>
                        </StackPanel>
                    </Grid>
                    <Border Grid.Row="1">
                        <ContentPresenter/>
                    </Border>
                </Grid>
            </Grid>
        </ControlTemplate>
    </Window.Template>
    <Grid Background="Transparent " HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
        <Button HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Content="切换主题" Click="ButtonBase_OnClick"/>
    </Grid>
</Window>