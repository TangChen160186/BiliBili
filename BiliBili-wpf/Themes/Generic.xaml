<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:BiliBili_wpf.Controls">
    <Style TargetType="controls:IndicatorListBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:IndicatorListBox">
                    <Grid Background="Transparent">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="2"/>
                        </Grid.RowDefinitions>
                        <WrapPanel x:Name="PART_HostPanel" 
                                  Panel.ZIndex="1" 
                                  Grid.Row="0"
                                  IsItemsHost="True"/>
                        <Border x:Name="PART_Indicator"
                                Grid.Row="1"
                                Height="2"
                                Background="{DynamicResource ThemePink}"
                                HorizontalAlignment="Left"
                                Width="40">
                            <Border.RenderTransform>
                                <TranslateTransform x:Name="PART_Transform" X="0"/>
                            </Border.RenderTransform>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>