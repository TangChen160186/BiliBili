<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <SolidColorBrush Color="Blue" x:Key="TestColor"/>
    <SolidColorBrush Color="#17181a" x:Key="WindowBackgroundBrush"/>
    <SolidColorBrush Color="#2f3134" x:Key="ButtonHoverBackgroundBrush"/>

    <Style TargetType="Button" x:Key="Btn-Minimum">
        <Setter Property="Margin" Value="0,0,32,0"/>
        <Setter Property="ToolTip" Value="最小化"/>
        <Setter Property="Width" Value="12"/>
        <Setter Property="Height" Value="12"/>
        <Setter Property="Command" Value="{Binding Source={x:Static SystemCommands.MinimizeWindowCommand}}"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}" x:Name="Border">

                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" TargetName="Border" 
                                    Value="{DynamicResource ButtonHoverBackgroundBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>